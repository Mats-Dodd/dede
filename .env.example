# Database connection URL for PostgreSQL
# This should match the database configuration in docker-compose.yaml
DATABASE_URL=postgresql://postgres:password@localhost:54321/electric

# Electric sync service URL
# For local development: http://localhost:3000
# For Electric Cloud: https://api.electric-sql.cloud
ELECTRIC_URL=http://localhost:3000

# Electric Cloud authentication (only needed for Electric Cloud)
SOURCE_ID=
SOURCE_SECRET=

# Create a secret for better-auth
BETTER_AUTH_SECRET=
